{
  "poem_templates": [
    {
      "pattern_pool": ["simple_sentence", "verb_phrase", "noun_phrase"],
      "min_lines": 2,
      "max_lines": 8,
      "repetition": true,
      "parallelism": true
    }
  ],
  "story_templates": [
    {
      "opening": {
        "pattern_pool": ["simple_sentence"],
        "min_sentences": 1,
        "max_sentences": 2
      },
      "conflict": {
        "pattern_pool": ["simple_sentence", "verb_phrase"],
        "min_sentences": 2,
        "max_sentences": 4
      },
      "resolution": {
        "pattern_pool": ["simple_sentence"],
        "min_sentences": 1,
        "max_sentences": 2
      }
    }
  ],
  "lecture_templates": [
    {
      "intro": {
        "pattern_pool": ["simple_sentence"],
        "min_sentences": 2,
        "max_sentences": 3
      },
      "explain": {
        "pattern_pool": ["simple_sentence", "verb_phrase", "noun_phrase"],
        "min_sentences": 3,
        "max_sentences": 6
      },
      "summary": {
        "pattern_pool": ["simple_sentence"],
        "min_sentences": 1,
        "max_sentences": 2
      }
    }
  ],
  "notes": [
    "Templates define structure for different generation kinds",
    "pattern_pool must reference valid pattern_ids from ika_grammar_patterns.json",
    "min/max_sentences control length of each section"
  ]
}
