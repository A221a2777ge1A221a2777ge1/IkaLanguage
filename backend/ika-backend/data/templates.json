{
  "poem_templates": [
    {
      "pattern_pool": ["poetic.noun_suffix", "poetic.prefix_okẹn", "sentence.expression.fixed"],
      "min_lines": 4,
      "max_lines": 10,
      "repetition": true,
      "parallelism": true
    }
  ],
  "story_templates": [
    {
      "opening": {
        "pattern_pool": ["sentence.svo", "sentence.location", "sentence.expression.fixed"],
        "min_sentences": 1,
        "max_sentences": 2
      },
      "conflict": {
        "pattern_pool": ["sentence.question.elebe", "sentence.negation.template", "sentence.conditional.omẹni"],
        "min_sentences": 2,
        "max_sentences": 4
      },
      "resolution": {
        "pattern_pool": ["sentence.tense.completive_gwọ", "sentence.svo"],
        "min_sentences": 1,
        "max_sentences": 2
      }
    }
  ],
  "lecture_templates": [
    {
      "intro": {
        "pattern_pool": ["greeting.fixed", "sentence.svo"],
        "min_sentences": 2,
        "max_sentences": 3
      },
      "explain": {
        "pattern_pool": ["sentence.svo", "sentence.location", "sentence.question.kị_wụ", "sentence.tense.progressive_rị"],
        "min_sentences": 3,
        "max_sentences": 6
      },
      "summary": {
        "pattern_pool": ["sentence.expression.fixed", "sentence.svo"],
        "min_sentences": 1,
        "max_sentences": 2
      }
    }
  ],
  "notes": [
    "pattern_pool must reference valid pattern_id values in ika_grammar_patterns.json",
    "Templates are structure only; slot-filling happens in the generator"
  ]
}